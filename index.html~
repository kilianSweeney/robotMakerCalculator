<script type="text/javascript">
function movePongBall(i,distance,goForward){
	console.log(document.getElementById('appLoadingIndicator').innerHTML.length);
	if(typeof motioncalc != 'undefined' && typeof motioncalc.app != 'undefined')return;
	if(i==690)return;
	if(distance > 115){
		goForward = false;
		distance = 114;
	}
	if(distance < 0){
		goForward = true;
		distance = 1;
	}
	document.getElementById('pong-ball').style.marginBottom= (distance + 'px');
//	if(distance % 100 === 0){
//		document.getElementById('pong-ball').style.marginLeft= ((distance/100) + 'px');
//		document.getElementById('pong-ball').style.marginRight= ((distance/100) + 'px');
//	}
	if(goForward)distance++;
	else distance--;
	i++;
	setTimeout('movePongBall('+i+','+distance+','+goForward+')',15);
}
movePongBall(0,0,0,true);
</script>
